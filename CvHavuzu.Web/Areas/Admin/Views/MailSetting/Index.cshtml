@model MailSetting

@{
    ViewData["Title"] = "Mail Ayarları";
}

<h2>Mail Ayarları</h2>

<form asp-area="Admin" role="form" asp-controller="MailSetting" asp-action="Index" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="MailUsername" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MailUsername" class="form-control" />
                <span asp-validation-for="MailUsername" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MailPassword" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MailPassword" class="form-control" />
                <span asp-validation-for="MailPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FromAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FromAddress" class="form-control" />
                <span asp-validation-for="FromAddress" class="text-danger"></span>
            </div>
        </div>        
        <div class="form-group">
            <label asp-for="FromAddressTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FromAddressTitle" class="form-control" />
                <span asp-validation-for="FromAddressTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ToAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ToAddress" class="form-control" />
                <span asp-validation-for="ToAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Subject" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BodyContent" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="BodyContent" class="form-control"></textarea>
                <span asp-validation-for="BodyContent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SmptServer" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SmptServer" class="form-control" />
                <span asp-validation-for="SmptServer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SmptPortNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SmptPortNumber" class="form-control" />
                <span asp-validation-for="SmptPortNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UseSSL" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="checkbox" asp-for="UseSSL" />
                <span asp-validation-for="UseSSL" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}