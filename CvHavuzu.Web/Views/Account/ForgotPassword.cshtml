@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifrenizi mi unuttunuz?";
}
<header class="page-header size-lg">
    <div class="container">
        <h1 class="text-center">Şifremi Unuttum</h1>
        @*<p class="lead text-center">@Html.Raw(ViewBag.Setting.WelcomeText)</p>*@
    </div>
</header>

<div class="container" style="background-color:white">
    <h2>@ViewData["Title"]</h2>
    <h4>E-posta adresinizi girin.</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Gönder</button>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
